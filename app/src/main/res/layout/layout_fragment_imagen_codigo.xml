<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/textura_fragment">

    <ImageView
        android:id="@+id/imgCodigoQR"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/borde_menu_nuevo_codigo">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/barraNavegacionCodigoQR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorNegro"
            app:itemIconTint="@color/colorAmarillo"
            app:itemTextColor="@color/colorAmarillo"
            app:menu="@menu/menu_nuevo_codigo"/>

    </FrameLayout>

</LinearLayout>